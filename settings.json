// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run the `open default settings` command
// from the command palette or from `Zed` application menu.
{
  // Look for the "Zed"
  "theme": {
    "mode": "dark",
    "light": "Catppuccin Latte - No Italics",
    "dark": "Catppuccin Mocha - No Italics"
  },
  "icon_theme": {
    "mode": "system",
    "light": "Catppuccin Latte",
    "dark": "Catppuccin Latte"
  },
  "active_pane_modifiers": {
    "magnification": 1.0,
    "border_size": 0.9,
    "inactive_opacity": 0.8
  },
  
  // Extension settings
  "auto_install_extensions": {
    "catppuccin": true,
    "catppuccin-icons": true
  },
  
  // Agent configuration
  "features": {
    "edit_prediction_provider": "copilot"
  },
  
  "agent": {
    "default_view": "text_thread",
    "default_model": {
      "provider": "copilot_chat",
      "model": "claude-3.5-sonnet"
    },
    "version": "2"
  },
  
  // Language-specific settings
  "languages": {
    "Plain Text": {
      "remove_trailing_whitespace_on_save": false,
      "format_on_save": "off",
      "tab_size": 4,
      "ensure_final_newline_on_save": false
    },
    "Python": {
      "tab_size": 4,
      "ensure_final_newline_on_save": true
    },
    "JSONC": {
      "show_edit_predictions": true,
      "tab_size": 2
    },
    "JSON": {
      "remove_trailing_whitespace_on_save": false,
      "format_on_save": "off",
      "tab_size": 4,
      "show_edit_predictions": false,
      "ensure_final_newline_on_save": false
    },
    "Markdown": {
      "enable_language_server": true
    }
  },
  
  // General settings
  "autosave": "on_focus_change",
  "restore_on_startup": "none",
  "auto_update": false, // This will change when Zed is released 4 windows
  "base_keymap": "JetBrains",
  "ui_font_size": 15,
  "buffer_font_size": 13.0,
  "buffer_font_family": "JetBrains Mono",
  "buffer_font_fallbacks": ["Cascadia Mono"],
  "confirm_quit": false,
  "direnv": "shell_hook",
  "hide_mouse": "on_typing",
  "snippet_sort_order": "bottom",
  "scrollbar": { "show": "always" },
  "minimap": {
    "show": "always",
    "thumb": "hover",
    "thumb_border": "none",
    "current_line_highlight": "none"
  },
  "tab_bar": {
    "show": false, // For aesthetic reasons
    "show_nav_history_buttons": false,
    "show_tab_bar_buttons": false
  },
  "tabs": {
    "close_position": "right",
    "file_icons": false,
    "git_status": true
  },
  "toolbar": {
    "breadcrumbs": true,
    "quick_actions": false,
    "selections_menu": true
  },
  "format_on_save": "off",
  "diagnostics": {
    "inline": {
      "enabled": true,
      "update_debounce_ms": 100,
      "padding": 4,
      "min_column": 90,
      "max_severity": "warning"
    },
    "include_warnings": true
  },
  "git": {
    "git_gutter": "tracked_files",
    "gutter_debounce": 100,
    "inline_blame": {
      "enabled": true,
      "min_column": 40,
      "delay_ms": 0,
      "show_commit_summary": true
    },
    "hunk_style": "unstaged_hollow"
  },
  "indent_guides": {
    "line_width": 1,
    "active_line_width": 1,
    "coloring": "indent_aware",
    "background_coloring": "disabled"
  },
  "hard_tabs": false,
  "inlay_hints": { // This is for trying out the inlay hints
    "enabled": true,
    "show_type_hints": true,
    "show_parameter_hints": true,
    "show_other_hints": true,
    "show_background": false,
    "edit_debounce_ms": 700,
    "scroll_debounce_ms": 50,
    "toggle_on_modifiers_press": null
  },
  "remove_trailing_whitespace_on_save": false,
  "ensure_final_newline_on_save": false,
  "show_whitespaces": "all",
  "soft_wrap": "none",
  "tab_size": 4,
  "telemetry": { // Disable telemetry when Zed is released 4 windows
    "diagnostics": true,
    "metrics": true
  },
  "terminal": {
    "font_family": "JetBrains Mono",
    "shell": {
      "program": "s:/Program Files/Git/bin/bash.exe"
    },
    "env": { "ZED": "1" },
    "font_size": 13
  },
  "unnecessary_code_fade": 0.8
}
