{
  // Each snippet must have a name and body, but the prefix and description are optional.
  // The prefix is used to trigger the snippet, but when omitted then the name is used.
  // Use placeholders like $1, $2 or ${1:defaultValue} to define tab stops.
  // The $0 determines the final cursor position.
  // Placeholders with the same value are linked.
  "Log into the console": {
    "prefix": "lg",
    "body": ["console.info(\"${1:var}:\", ${1:var});$0"],
    "description": "Logs to console"
  },
  "Make a class": {
    "prefix": "cl",
    "body": [
      "export class ${1:ClassName} {",
      "  constructor(${2:args}) {",
      "    $0",
      "  }",
      "}"
    ],
    "description": "Creates a class with a constructor and a method"
  },
  "Makes arrow": {
    "prefix": "ar",
    "body": [
      "(${2:args}) => { $0 }"
    ],
    "description": "Creates an arrow function"
  },
  "Makes function": {
    "prefix": "fn",
    "body": [
      "function ${1:funcName}(${2:args}) {",
      "  $0",
      "}"
    ],
    "description": "Creates a function"
  },
  "Makes async function": {
    "prefix": "as",
    "body": [
      "async function ${1:funcName}(${2:args}) {",
      "  $0",
      "}"
    ],
    "description": "Creates an async function"
  }
}
